<table class="table table-striped table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Vehicle Number</th>
      <th>Registration Number</th>
      <th>Model Number</th>
      <th>Name</th>
      <th>Vehicle Type</th>
      <th>Block/Unblock</th>
      <th>Show Stations</th>
    </tr>
  </thead>
  <tbody>
  	<% @vehicles.each_with_index do |vehicle, index|%>
	    <tr>
	      <th scope="row"><%= index + 1%></th>
	      <td><%= vehicle.vehicle_number%></td>
	      <td><%= vehicle.registration_no%></td>
	      <td><%= vehicle.model_no%></td>
        <td><%= vehicle.name%></td>
	      <td><%= vehicle.vehicle_type%></td>
        <td><%= link_to vehicle.is_block ? 'Unblock' : 'Block' , admin_vehicle_path(vehicle), :method=> :put %></td>
        <td><%= link_to 'show stations', admin_vehicle_path(vehicle) %></td>
	    </tr>
    <%end%>
  </tbody>
</table>